pipeline {
    agent any
    stages {
         stage('Deploy') {
            steps {
                sshagent(['ssh-credentials-id']) {
                    sh "ssh root@161.97.136.69 'ls -al'"
                    sh "ssh root@161.97.136.69 'echo Hello World'"
                }
            }
        }

        stage('SSH to remote server and execute command1') {
            steps {
                withCredentials([sshUserPrivateKey(credentialsId: 'ssh-credentials-id', keyFileVariable: 'SSH_KEYFILE',
                                                    passphraseVariable: 'SSH_PASSPHRASE', usernameVariable: 'SSH_USERNAME')]) {
                    sshScript remote: [
                        host: "161.97.136.69",
                        port: "22",
                        user: "root",
                        keyPath: "$SSH_KEYFILE",
                        passphrase: "$SSH_PASSPHRASE"
                    ], script: """
                        ls -al
                        pwd
                    """
                }
            }
        }

    }
    post {
        always {
            cleanWs()
        }
        success {
            echo 'Build successful!'
        }
        failure {
            echo 'Build failed!'
        }
    }
}
