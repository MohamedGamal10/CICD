pipeline {
    agent any
    stages {
        stage('SSH') {
            steps {
                withCredentials([sshUserPrivateKey(credentialsId: 'ssh-credentials-id', keyFileVariable: 'SSH_KEYFILE',
                                                    usernameVariable: 'SSH_USERNAME')]) {

                    sshScript remote: [
                        host: env.REMOTE_HOST,
                        port: env.REMOTE_PORT,
                        user: "${SSH_USERNAME}",
                        keyPath: "${SSH_KEYFILE}",
                        returnStdout: true
                    ], script: """
                        ls -al
                        pwd
                    """
                }
            }
        }
        stage('login server'){
         steps{
            sshagent(credentials:['ssh-credentials-id']){
               sh 'ssh  -o StrictHostKeyChecking=no  root@161.97.136.69 uptime "whoami"'
          }
        echo "success lgoin"
         }
       }
    }
    post {
        always {
            cleanWs()
        }
        success {
            echo 'Build successful!'
        }
        failure {
            echo 'Build failed!'
        }
    }
}
