pipeline {
    agent any
    stages {
        stage('SSH') {
            steps {
                withCredentials([sshUserPrivateKey(credentialsId: 'ssh-credentials-id', keyFileVariable: 'SSH_KEYFILE',
                                                    passphraseVariable: 'SSH_PASSPHRASE', usernameVariable: 'SSH_USERNAME')]) {

                    sshagent(['ssh-credentials-id']) {
                        sh "ssh -o StrictHostKeyChecking=no -l ${SSH_USERNAME}@${REMOTE_HOST} 'whoami'"
                        sh "ssh -o StrictHostKeyChecking=no -l ${SSH_USERNAME}@${REMOTE_HOST} 'ls -al'"
                 }
                }
            }
        }

    }
    post {
        always {
            cleanWs()
        }
        success {
            echo 'Build successful!'
        }
        failure {
            echo 'Build failed!'
        }
    }
}
