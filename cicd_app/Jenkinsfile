pipeline {
agent any
  stages {
    stage('SSH') {
      steps {
        sshPublisher(
          publishers: [
            sshPublisherDesc(
              configName: 'remote',
              transfers: [
                sshTransfer(
                  execCommand: 'ls -al /root',
                  printExecOutput: true
                )
              ]
            )
          ]
        )
      }
    }
  }
    post {
        always {
            cleanWs()
        }
        success {
            echo 'Build successful!'
        }
        failure {
            echo 'Build failed!'
        }
    }
}
